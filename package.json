{
  "name": "portfolio-hono",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build:css": "tailwindcss -i ./src/style.css -o ./public/tailwind.css --minify",
    "build": "npm run build:css && wrangler deploy --dry-run",
    "preview": "wrangler dev --local",
    "deploy": "wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check ."
  },
  "dependencies": {
    "basecoat-css": "^0.3.1",
    "hono": "^4.8.12",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.2.3",
    "@biomejs/biome": "^1.9.4",
    "@tailwindcss/cli": "^4.1.14",
    "@types/node": "^24.2.0",
    "typescript": "^5.9.2",
    "vite": "^6.3.5",
    "wrangler": "^4.17.0"
  }
}
